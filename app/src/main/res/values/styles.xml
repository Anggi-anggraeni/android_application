<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- loading custom -->
    <style name="CustomLoadingStyle" parent="android:Theme.Holo.Dialog">
        <item name="android:textSize">180sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">#0000FF</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:textColorPrimary">#FFF000</item>
        <item name="android:windowBackground">@color/colorTransparan</item>
        <item name="android:alertDialogStyle">@style/CustomProgressDialogStyle</item>
    </style>

        <style name="CustomProgressDialogStyle">
        <item name="android:bottomBright">@color/colorTransparan</item>
        <item name="android:bottomDark">@color/colorTransparan</item>
        <item name="android:bottomMedium">@color/colorTransparan</item>
        <item name="android:centerBright">@color/colorTransparan</item>
        <item name="android:centerDark">@color/colorTransparan</item>
        <item name="android:centerMedium">@color/colorTransparan</item>
        <item name="android:fullBright">@color/colorTransparan</item>
        <item name="android:fullDark">@color/colorTransparan</item>
        <item name="android:topBright">@color/colorTransparan</item>
        <item name="android:topDark">@color/colorTransparan</item>
    </style>



</resources>
